// Стили документа
*
    padding 0
    font inherit
    box-sizing border-box

body
    margin 0
    font-size 100%
    line-height normal
    color #373737
    background-color #797979

.main
    margin-left auto
    margin-right auto
    width 100%
    max-width 1000px
    background-image url('../images/pattern.jpg')
    border 1px solid #DCDCDC

img
    max-width 100%
    height auto
    width auto\9


